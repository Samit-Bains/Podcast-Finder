<div class="container">
    <form action="/search" method="GET">
        <div class="form-group">
            <label for="podcastInput">Find a podcast</label>
            <input type="text" class="form-control" id="podcastInput" name="podcastInput" value="<%= typeof podcastSearch !== 'undefined' ? podcastSearch : '' %>" placeholder="Search for a Podcast!">
        </div>
        <div class="form-group">
            <label for="dropDown">Sort by</label>
            <select class="bootstrap-select" id="dropDown" name="sortBy">
                <option value="0" selected="selected">Relevance</option>
                <option value="1">Date</option>
            </select>
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>