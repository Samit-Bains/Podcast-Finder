<% if(typeof pageStart !== "undefined"){ %>

    <div class="container podcasts">
        <ul class="pagination ml-5">
            <% if(pageStart - 1 > 0){ %>
            <li class="page-item"><a class="page-link" href="search?podcastInput=<%= podcastSearch %>&sortBy=<%= sortBy %>&page=<%= pageStart - 1 %>">Previous</a></li>
            <% } %>
            <% for(var i = pageStart; i < (lastPage); i++){ %>
            <li class="page-item active"><a class="page-link" href="search?podcastInput=<%= podcastSearch %>&sortBy=<%= sortBy %>&page=<%= i %>"><%= i %></a></li>
            <% } %>
            <% if(lastPage != Math.ceil(results.total / 10)){ %>
            <li class="page-item"><a class="page-link" href="search?podcastInput=<%= podcastSearch %>&sortBy=<%= sortBy %>&page=<%= lastPage %>">Next</a></li>
            <% } %>
        </ul>
    </div>

<% } %>